<MSheet Class="mx-auto" MaxWidth="800" Elevation="8">
    <MSlideGroup ShowArrows="@(true)" Class="pa-4" Mandatory>
        @foreach (var item in Enumerable.Range(1, 15))
        {
            <MSlideItem>
                <MCard Color="@(context.Active ? "primary" : "grey lighten-1")" Class="ma-4" Height="200" Width="100" @onclick="@context.Toggle">
                    <MRow Class="fill-height" Align="AlignTypes.Center" Justify="JustifyTypes.Center">
                        <!--TODO: v-scale-transition -->
                        @if (context.Active)
                        {
                            <MIcon Color="white" Size="48">mdi-close-circle-outline</MIcon>
                        }
                    </MRow>
                </MCard>
            </MSlideItem>
        }
    </MSlideGroup>
</MSheet>