<MItemGroup Multiple>
    <MContainer>
        <MRow>
            @foreach (var i in Enumerable.Range(0, 3))
            {
                <MCol Cols="12" Span="4" @key="i">
                    <MItem>
                        <MCard Color="@(context.Active ? "primary" : "")"
                               Class="d-flex align-center"
                               Dark
                               Height="200"
                               OnClick="context.Toggle">
                            <ScrollYTransition>
                                <Element Show="context.Active" Class="text-h2 flex-grow-1 text-center">
                                    Active
                                </Element>
                            </ScrollYTransition>
                        </MCard>
                    </MItem>
                </MCol>
            }
        </MRow>
    </MContainer>
</MItemGroup>