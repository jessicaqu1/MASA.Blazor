<MWindow ShowArrows>
    <PrevContent>
        <MButton Color="success" Click="context">Previous slide</MButton>
    </PrevContent>
    <NextContent>
        <MButton Color="info" Click="context">Next slide</MButton>
    </NextContent>
    <ChildContent>
        @foreach (var item in Enumerable.Range(1, length))
        {
            <MWindowItem>
                <MCard Color="grey" Height="200">
                    <MRow Class="fill-height" Align="AlignTypes.Center" Justify="JustifyTypes.Center">
                        <h1 style="font-size: 5rem" class="white--text">Slide @item</h1>
                    </MRow>
                </MCard>
            </MWindowItem>
        }
    </ChildContent>
</MWindow>

@code {

    int length = 5;
}