<MApp>
    <MAppBar App Absolute Flat Style="grey lighten-1;"></MAppBar>

    <MNavigationDrawer @bind-MiniVariant="_mini" Absolute Style="background-color:#F5F5F5">
        <MListItem Class="px-2">
            <MButton Icon OnClick="() => _mini = !_mini">
                <MIcon>mdi-chevron-left</MIcon>
            </MButton>
        </MListItem>
    </MNavigationDrawer>

    <MMain Class="grey lighten-3"></MMain>

    <MFooter Style="padding-left: 256px;color:grey lighten-1;"></MFooter>
</MApp>

@code{
    private bool _mini = false;
}