<MRow class="d-flex" Justify="JustifyTypes.Center">
    <MMenu Absolute OffsetY Style="max-width: 600px">
        <ActivatorContent>
            <MCard class="portrait" @attributes="@context.Attrs">
                <MImage Height="300" Width="600" Src="https://cdn.vuetifyjs.com/images/cards/cooking.png"></MImage>
            </MCard>
        </ActivatorContent>

        <ChildContent>
            <MList>
                @foreach (var item in items)
                {
                    <MListItem>
                        <MListItemContent>
                            <MListItemTitle>
                                @item
                            </MListItemTitle>
                        </MListItemContent>
                    </MListItem>
                }
            </MList>
        </ChildContent>
    </MMenu>
</MRow>

@code {

    string[] items =
    {
        "Click Me",
        "Click Me",
        "Click Me",
        "Click Me 2"
    };

}