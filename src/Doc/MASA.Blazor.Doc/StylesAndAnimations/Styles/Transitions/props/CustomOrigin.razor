<div class="text-center">
    <MMenu Transition="scale-transition" Origin="center center">

        <ActivatorContent>
            <MButton Dark Color="primary" @attributes="context.Attrs">
                Scale Transition
            </MButton>
        </ActivatorContent>

        <ChildContent>
            <MList>
                @for (var i = 0; i < 5; i++)
                {
                    <MListItemTitle>
                        @("Item"+i)
                    </MListItemTitle>
                }
            </MList>
        </ChildContent>

    </MMenu>
</div>